  <body>
    <section class="container">
      <header>SIGNUP</header>
      <form action="#" class="form">
        <div class="input-box">
          <label>Enter your name</label>
          <input type="text" placeholder="Your name" name="username" required />
        </div>

        <div class="input-box">
          <label>Valid Email Address</label>
          <input type="text" placeholder="emailname@something.com" email="email"required />
        </div>

        <div class="column">
            <div class="input-box">
                <label>Enter Phone Number</label>
                    <input type="number" placeholder="Enter phone number" required />
                  </div>
              </div>
              
          <div class="input-box">
            <label>D.O.B.</label>
            <input type="date" placeholder="Enter date of birth" required />
          </div>
        </div> 
         <div class="gender-box">
          <h3>Your Gender</h3>
          <div class="gender-option">
            <div class="gender">
              <input type="radio" id="check-male" name="gender" checked />
              <label for="check-male">male</label>
            </div>
            <div class="gender">
              <input type="radio" id="check-female" name="gender" />
              <label for="check-female">Female</label>
             </div>
            <div class="gender">
              <input type="radio" id="check-other" name="gender" />
              <label for="check-other">Other</label>
            </div>
          </div>
        </div> 
        <div class="input-box address">
          <label>Address</label>
          <input type="text" placeholder="Enter street addres" required />
          <!-- <input type="text" placeholder="Enter street address line 2" required /> -->
          <div class="column">
            <div class="input-box">
            <label>Country</label>
            <input type="text" placeholder="Enter your country" required />
            <input type="text" placeholder="Enter your city" required />
            </div>
          </div>
          <div class="column">
            <input type="text" placeholder="Enter your State" required />
            <input type="number" placeholder="Enter postal code" required />
          </div>
        </div>
        <div class="input-box">
            <label>Password</label>
            <input type="password" placeholder="Enter Password" name="password" required />
            <label>
                <h4>Password Requirements:</h4>
                <ul>
                    <li>At least 8 characters long</li>
                    <li>At least one lowercase letter</li>
                    <li>At least one uppercase letter</li>
                    <li>At least one digit</li>
            </ul>
            </label>
        </div>
          <div class="input-box">
            <label>Confirm Password</label>
            <input type="password" placeholder="Confirm Password" required />
          </div>
          <section class="already-signed">
            <p>Already signed up? <a href="Login2.html">Login in</a></p>
          </section>
        <button>Submit</button>
      </form> 
    </section>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
          var form = document.querySelector(".form");
          var passwordInput = document.querySelector('input[type="password"]');
          var confirmPasswordInput = document.querySelectorAll('input[type="password"]')[1];
          form.addEventListener("submit", function(event) {
            if (passwordInput.value !== confirmPasswordInput.value) {
              event.preventDefault();
              alert("Password and Confirm Password do not match. Please try again.");
              passwordInput.value = "";
              confirmPasswordInput.value = "";
            }
          });
        });
      </script> 
      <script>
        document.addEventListener("DOMContentLoaded", function() {
          var form = document.querySelector(".form");
          var passwordInput = document.querySelector('input[type="password"]');
          var confirmPasswordInput = document.querySelectorAll('input[type="password"]')[1];
          var emailInput = document.querySelector('input[type="text"][placeholder="Your email"]');
          form.addEventListener("submit", function(event) {
            if (passwordInput.value !== confirmPasswordInput.value) {
              event.preventDefault();
              alert("Password and Confirm Password do not match. Please try again.");
              passwordInput.value = "";
              confirmPasswordInput.value = "";
            }
    
            // Password validation
            var passwordRegex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}$/;
            if (!passwordRegex.test(passwordInput.value)) {
              event.preventDefault();
              alert("Password must be at least 8 characters long and contain at least one lowercase letter, one uppercase letter, and one digit.");
              passwordInput.value = "";
              confirmPasswordInput.value = "";
            }
    
            // Username (Email) validation
            var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (emailInput.value && !emailRegex.test(emailInput.value)) {
              event.preventDefault();
              alert("Please enter a valid email address.");
              emailInput.value = "";
            }
          });
        });
    </script>    
